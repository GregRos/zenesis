{
    "compilerOptions": {
        "composite": true,
        "module": "CommonJS",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": true,
        "strict": true,
        
    },
    "exclude": ["node_modules", "**/node_modules/*", "**/dist"]
}