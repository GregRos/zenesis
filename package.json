{
    "workspaces": [
        "src/*"
    ],
    "private": true,
    "scripts": {
        "build:generate": "tsc -b src/zenesis-generate/lib/tsconfig.json",
        "build:schema": "tsc -b src/zenesis-schema/lib/tsconfig.json",
        "build:main": "tsc -b src/zenesis/zenesis/tsconfig.json",
        "build:all": "run-s build:schema build:generate build:main",
        "clean": "shx rm -rf dist",
        "rebuild": "run-s clean build:all",
        "lint": "eslint --ext .ts src && prettier --write src",
        "test:generate": "jest src/zenesis-generate/jest.config.mjs",
        "test:generate:watch": "jest --watch src/zenesis-generate/jest.config.mjs",
        "test:schema": "jest src/zenesis-schema/jest.config.mjs",
        "test:schema:watch": "jest --watch src/zenesis-schema/jest.config.mjs"
    },
    "devDependencies": {
        "@gregros/eslint-config": "^0.5.0",
        "@types/node": "^20.11.28",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "eslint": "^8.57.0",
        "lodash": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "prettier": "^3.2.5",
        "prettier-plugin-organize-imports": "^3.2.4",
        "shx": "^0.3.4",
        "typescript": "^5.4.2"
    }
}
